<%- include ('../../partials/header.ejs') %>
        <div class="container">
            <div class="card">
                <div class="card-header">
                    <h2>Cadastro de Usu√°rios</h2>
                </div>
                <viv class="card-boddy">
                    <form onsubmit="confirmUser(event, this)" method="post" action="/admin/users/save">
                        <label for="name">Nome:</label><br>
                        <input class="form-control" type="text" name="name" id="name" placeholder="Seu nome ..."><br>
        
                        <label for="email">E-mail:</label><br>
                        <input class="form-control" type="email" name="email" id="email" placeholder="exemplo@gmail.com"><br>
                        
                        <label for="pass">Senha:</label><br>
                        <input class="form-control" type="password" name="password" id="pass" placeholder="***********"><br>
                        
                        <input type="submit" value="Salvar" class="btn btn-success">
                    </form>
                </viv>
            </div>
        </div>
        <script>
            function confirmUser(e, form){
                e.preventDefault();
                let name = document.getElementById("name").value;
                let email = document.getElementById("email").value;
                let pass = document.getElementById("pass").value;
                if(name == ""){
                    alert("Preencha o campo nome");
                }else if(email == "") {
                    alert("Preencha o campo e-mail")
                }else if(pass == "") {
                    alert("Preencha o campo senha")
                }else{
                    form.submit()
                }
            }
        </script>
